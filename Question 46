#include<stdio.h>
struct Process_Details
{
    int arrival_time,burst_time;
};
int main()
{
    double priority_queue[4];
    double priority_factor;
    int arrival[4];
    struct Process_Details P[4];
    int i,j;
    int arr[4]={0,1,2,3};
    int total_burst=0;
    for(i=0;i<4;i++)
    {
        printf("Enter the Arrival Time for process P%d\n",i);
        scanf("%d",&P[i].arrival_time);
        arrival[i]=P[i].arrival_time;
        printf("Enter the Burst Time for process P%d\n",i);
        scanf("%d",&P[i].burst_time);
        total_burst=total_burst+P[i].burst_time;
    }
}
